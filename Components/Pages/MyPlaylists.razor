@page "/playlists"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using SingleStepViewer.Data.Entities
@using SingleStepViewer.Services.Interfaces
@attribute [Authorize]
@inject IPlaylistService PlaylistService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>My Playlists - SingleStepViewer</PageTitle>

<h1>My Playlists</h1>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

<div class="playlist-header">
    <button class="btn btn-primary" @onclick="ShowCreateDialog">Create New Playlist</button>
</div>

@if (showCreateDialog)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <h3>Create Playlist</h3>
            <EditForm Model="newPlaylist" OnValidSubmit="CreatePlaylist">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>Name:</label>
                    <InputText @bind-Value="newPlaylist.Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Description (optional):</label>
                    <InputTextArea @bind-Value="newPlaylist.Description" class="form-control" rows="3" />
                </div>

                <div class="button-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <button type="button" class="btn" @onclick="HideCreateDialog">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

<div class="playlists-container">
    @if (isLoading)
    {
        <p>Loading playlists...</p>
    }
    else if (playlists == null || !playlists.Any())
    {
        <p>You don't have any playlists yet. Create one to get started!</p>
    }
    else
    {
        <div class="playlists-grid">
            @foreach (var playlist in playlists)
            {
                <div class="playlist-card">
                    <h3>@playlist.Name</h3>
                    @if (!string.IsNullOrEmpty(playlist.Description))
                    {
                        <p>@playlist.Description</p>
                    }
                    <div class="playlist-stats">
                        <span><strong>Videos:</strong> @playlist.Items.Count</span>
                        <span><strong>Created:</strong> @playlist.CreatedAt.ToString("MMM d, yyyy")</span>
                    </div>
                    <div class="button-group">
                        <button class="btn btn-primary" @onclick="() => ViewPlaylist(playlist.Id)">View/Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeletePlaylist(playlist.Id)">Delete</button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private IEnumerable<Playlist>? playlists;
    private bool isLoading = true;
    private string? errorMessage;
    private string? successMessage;
    private bool showCreateDialog;
    private PlaylistModel newPlaylist = new();
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

        if (userId == null)
        {
            errorMessage = "User not found";
            isLoading = false;
            return;
        }

        await LoadPlaylists();
    }

    private async Task LoadPlaylists()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            playlists = await PlaylistService.GetUserPlaylistsAsync(userId!);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading playlists: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateDialog()
    {
        newPlaylist = new PlaylistModel();
        showCreateDialog = true;
        errorMessage = null;
        successMessage = null;
        StateHasChanged();
    }

    private void HideCreateDialog()
    {
        showCreateDialog = false;
        newPlaylist = new PlaylistModel();
    }

    private async Task CreatePlaylist()
    {
        try
        {
            await PlaylistService.CreatePlaylistAsync(userId!, newPlaylist.Name, newPlaylist.Description);
            successMessage = "Playlist created successfully!";
            showCreateDialog = false;
            await LoadPlaylists();

            // Clear success message after 3 seconds
            _ = Task.Delay(3000).ContinueWith(_ => InvokeAsync(() =>
            {
                successMessage = null;
                StateHasChanged();
            }));
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating playlist: {ex.Message}";
        }
    }

    private void ViewPlaylist(int playlistId)
    {
        Navigation.NavigateTo($"/playlists/{playlistId}");
    }

    private async Task DeletePlaylist(int playlistId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this playlist and all its videos?"))
        {
            return;
        }

        try
        {
            var success = await PlaylistService.DeletePlaylistAsync(playlistId);
            if (success)
            {
                successMessage = "Playlist deleted successfully!";
                await LoadPlaylists();

                // Clear success message after 3 seconds
                _ = Task.Delay(3000).ContinueWith(_ => InvokeAsync(() =>
                {
                    successMessage = null;
                    StateHasChanged();
                }));
            }
            else
            {
                errorMessage = "Failed to delete playlist";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting playlist: {ex.Message}";
        }
    }

    public class PlaylistModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
